@page "/admin/test-reports"
@rendermode InteractiveServer

@using MattEland.Jaimes.ServiceDefinitions.Responses
@using MattEland.Jaimes.Web.Components.Shared
@using MudBlazor

@inject HttpClient Http
@inject NavigationManager NavigationManager
@inject IDialogService DialogService
@inject ISnackbar Snackbar

<PageTitle>Test Reports</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="pa-4">
    <CompactHeroSection Title="Test Reports"
                        Icon="@Icons.Material.Filled.Assessment"
                        Theme="CompactHeroSection.HeroTheme.Info"
                        ItemCount="@_reports?.Count"
                        ItemName="report"
                        Subtitle="available"
                        SubtitleNoItems="Run tests to generate reports"
                        ActionText="Run Tests"
                        ActionHref="/admin/run-tests"
                        ActionIcon="@Icons.Material.Filled.PlayArrow"/>

    <MudStack Row="true" AlignItems="AlignItems.Center" Class="mb-2">
        <MudBreadcrumbs Items="_breadcrumbs" Separator=">"></MudBreadcrumbs>
    </MudStack>

    @if (_isLoading)
    {
        <MudProgressCircular Indeterminate="true"/>
    }
    else if (_reports is null || _reports.Count == 0)
    {
        <div class="glass-card pa-6" style="text-align: center;">
            <MudStack AlignItems="AlignItems.Center" Spacing="3">
                <MudIcon Icon="@Icons.Material.Filled.Assessment" Color="Color.Info"
                         Style="font-size: 4rem; opacity: 0.5;"/>
                <MudText Typo="Typo.h6">No reports yet</MudText>
                <MudText Class="text-muted mb-4">Run tests to generate reports and track agent performance.</MudText>
                <MudButton Variant="Variant.Filled" Color="Color.Info" Size="Size.Large"
                           Href="/admin/run-tests" StartIcon="@Icons.Material.Filled.PlayArrow">
                    Run Tests
                </MudButton>
            </MudStack>
        </div>
    }
    else
    {
        <MudTable Items="_pagedReports" Hover="true" Dense="true" Elevation="2">
            <HeaderContent>
                <MudTh>Execution</MudTh>
                <MudTh>Agent Versions</MudTh>
                <MudTh>Tests</MudTh>
                <MudTh>Evaluators</MudTh>
                <MudTh>Created</MudTh>
                <MudTh>Size</MudTh>
                <MudTh Style="text-align: right;">Actions</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Execution">
                    <MudStack Spacing="0">
                        <MudLink Href="@($"/admin/test-runs/compare?executions={Uri.EscapeDataString(context.ExecutionName)}")">
                            @context.ExecutionName
                        </MudLink>
                        @if (context.IsDeleted)
                        {
                            <MudText Typo="Typo.caption" Color="Color.Warning">(report deleted)</MudText>
                        }
                    </MudStack>
                </MudTd>
                <MudTd DataLabel="Agent Versions">
                    @{
                        // Group versions by agent
                        var agentGroups = context.AgentVersions.GroupBy(v => v.AgentId).ToList();
                    }
                    <MudStack Spacing="1">
                        @foreach (var agentGroup in agentGroups)
                        {
                            var firstVersion = agentGroup.First();
                            <MudStack Row="true" Spacing="1" AlignItems="AlignItems.Center">
                                <AgentLink AgentId="@firstVersion.AgentId" AgentName="@firstVersion.AgentName"/>
                                @foreach (var version in agentGroup)
                                {
                                    <AgentVersionLink AgentId="@version.AgentId"
                                                      VersionId="@version.InstructionVersionId"
                                                      VersionNumber="@version.VersionNumber"/>
                                }
                            </MudStack>
                        }
                    </MudStack>
                </MudTd>
                <MudTd DataLabel="Tests">
                    <MudChip T="string" Size="Size.Small" Color="Color.Primary">@context.TotalTestCaseCount tests</MudChip>
                </MudTd>
                <MudTd DataLabel="Evaluators">
                    <MudChip T="string" Size="Size.Small" Color="Color.Secondary">@context.EvaluatorCount</MudChip>
                </MudTd>
                <MudTd DataLabel="Created">@context.CreatedAt.ToString("yyyy-MM-dd HH:mm")</MudTd>
                <MudTd DataLabel="Size">
                    @if (context.IsDeleted)
                    {
                        <MudText Typo="Typo.body2" Color="Color.Warning">(deleted)</MudText>
                    }
                    else
                    {
                        @FormatSize(context.SizeBytes)
                    }
                </MudTd>
                <MudTd Style="text-align: right;">
                    <MudStack Row="true" Spacing="1" Justify="Justify.FlexEnd">
                        <MudTooltip Text="View Comparison" Placement="Placement.Top">
                            <MudIconButton Icon="@Icons.Material.Filled.Compare"
                                           Size="Size.Small"
                                           Color="Color.Primary"
                                           Href="@($"/admin/test-runs/compare?executions={Uri.EscapeDataString(context.ExecutionName)}")"/>
                        </MudTooltip>
                        @if (!context.IsDeleted)
                        {
                            <MudTooltip Text="View Raw Report" Placement="Placement.Top">
                                <MudIconButton Icon="@Icons.Material.Filled.Article"
                                               Size="Size.Small"
                                               OnClick="@(() => ViewReport(context.ReportId))"/>
                            </MudTooltip>
                            <MudTooltip Text="Delete Report File" Placement="Placement.Top">
                                <MudIconButton Icon="@Icons.Material.Filled.Delete"
                                               Size="Size.Small"
                                               Color="Color.Error"
                                               OnClick="@(() => ConfirmDeleteReport(context))"/>
                            </MudTooltip>
                        }
                    </MudStack>
                </MudTd>
            </RowTemplate>
        </MudTable>

        <MudStack Row="true" Justify="Justify.Center" Class="mt-4">
            <MudPagination Count="_totalPages"
                           Selected="_currentPage"
                           SelectedChanged="OnPageChanged"
                           Color="Color.Primary"/>
        </MudStack>
    }
</MudContainer>

@* Report Dialog *@
<MudDialog @bind-Visible="_showReportDialog" Options="_reportDialogOptions">
    <TitleContent>
        <MudText Typo="Typo.h6">Test Report</MudText>
    </TitleContent>
    <DialogContent>
        @if (_loadingReport)
        {
            <MudProgressCircular Indeterminate="true"/>
        }
        else if (!string.IsNullOrEmpty(_reportError))
        {
            <MudAlert Severity="Severity.Error">@_reportError</MudAlert>
        }
        else if (!string.IsNullOrEmpty(_reportHtml))
        {
            <iframe srcdoc="@_reportHtml" style="width: 100%; height: 70vh; border: none;"></iframe>
        }
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Default" OnClick="@(() => _showReportDialog = false)">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {
    private bool _isLoading = true;
    private List<StoredReportResponse> _reports = [];
    private List<StoredReportResponse> _pagedReports = [];
    private int _currentPage = 1;
    private int _pageSize = 20;
    private int _totalPages = 1;

    private bool _showReportDialog;
    private bool _loadingReport;
    private string? _reportHtml;
    private string? _reportError;

    private DialogOptions _reportDialogOptions = new()
    {
        MaxWidth = MaxWidth.ExtraExtraLarge,
        FullWidth = true
    };

    private List<BreadcrumbItem> _breadcrumbs = new()
    {
        new BreadcrumbItem("Home", href: "/"),
        new BreadcrumbItem("Admin", href: "/admin"),
        new BreadcrumbItem("Test Reports", href: null, disabled: true)
    };

    protected override async Task OnInitializedAsync()
    {
        await LoadReportsAsync();
    }

    private async Task LoadReportsAsync()
    {
        _isLoading = true;
        try
        {
            _reports = await Http.GetFromJsonAsync<List<StoredReportResponse>>("test-reports") ?? [];
            _totalPages = Math.Max(1, (int)Math.Ceiling((double)_reports.Count / _pageSize));
            UpdatePagedData();
        }
        catch (Exception)
        {
            // Silent fail - will show empty state
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void OnPageChanged(int page)
    {
        _currentPage = page;
        UpdatePagedData();
    }

    private void UpdatePagedData()
    {
        _pagedReports = _reports
            .Skip((_currentPage - 1) * _pageSize)
            .Take(_pageSize)
            .ToList();
    }

    private async Task ViewReport(int reportId)
    {
        _showReportDialog = true;
        _loadingReport = true;
        _reportHtml = null;
        _reportError = null;
        StateHasChanged();

        try
        {
            var response = await Http.GetAsync($"test-reports/{reportId}/content");
            if (response.IsSuccessStatusCode)
            {
                _reportHtml = await response.Content.ReadAsStringAsync();
            }
            else
            {
                _reportError = $"Failed to load report: {response.StatusCode}";
            }
        }
        catch (Exception ex)
        {
            _reportError = $"Error: {ex.Message}";
        }
        finally
        {
            _loadingReport = false;
            StateHasChanged();
        }
    }

    private async Task ConfirmDeleteReport(StoredReportResponse report)
    {
        bool? result = await DialogService.ShowMessageBoxAsync(
            "Delete Report",
            $"Delete report file for '{report.ExecutionName}'? The test run metrics will be preserved.",
            "Delete",
            cancelText: "Cancel");

        if (result == true)
        {
            await DeleteReportAsync(report.ReportId);
        }
    }

    private async Task DeleteReportAsync(int reportId)
    {
        try
        {
            var response = await Http.DeleteAsync($"test-reports/{reportId}");
            if (response.IsSuccessStatusCode)
            {
                Snackbar.Add("Report file deleted. Metrics preserved.", Severity.Success);
                await LoadReportsAsync();
            }
            else
            {
                Snackbar.Add($"Failed to delete report: {response.StatusCode}", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
    }

    private void DownloadReport(int reportId, string fileName)
    {
        var url = $"{Http.BaseAddress}test-reports/{reportId}/download";
        NavigationManager.NavigateTo(url, forceLoad: true);
    }

    private static string FormatSize(long? bytes)
    {
        if (!bytes.HasValue) return "-";
        if (bytes < 1024) return $"{bytes} B";
        if (bytes < 1024 * 1024) return $"{bytes / 1024.0:F1} KB";
        return $"{bytes / (1024.0 * 1024.0):F1} MB";
    }

}
