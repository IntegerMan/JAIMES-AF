@page "/players"
@rendermode InteractiveServer

@inject HttpClient Http
@inject ILoggerFactory LoggerFactory
@inject IDialogService DialogService
@inject NavigationManager Navigation

<PageTitle>Players</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="pa-4">

	@* Compact Hero Section for Players *@
	<div class="players-hero pa-3 mb-4" style="background: linear-gradient(135deg, rgba(76, 201, 240, 0.1) 0%, rgba(67, 97, 238, 0.1) 100%); 
		border-radius: 16px; border: 1px solid rgba(76, 201, 240, 0.2);">
		<MudStack Row="true" AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween">
			<MudStack Row="true" AlignItems="AlignItems.Center" Spacing="3">
				<div class="icon-badge icon-badge-tertiary">
					<MudIcon Icon="@Icons.Material.Filled.Person" Style="color: white; font-size: 1.5rem;"/>
				</div>
				<MudStack Spacing="0">
					<MudText Typo="Typo.h5" Style="font-weight: 600; color: #4CC9F0;">Your Players</MudText>
					<MudText Typo="Typo.caption" Class="text-muted">
						@if (_players is not null && _players.Length > 0)
						{
							<span>@_players.Length player@(_players.Length != 1 ? "s" : "") available</span>
						}
						else
						{
							<span>Create your first player</span>
						}
					</MudText>
				</MudStack>
			</MudStack>
			<MudButton Variant="Variant.Filled" Color="Color.Tertiary" Href="/players/new"
			           StartIcon="@Icons.Material.Filled.Add">
				New Player
			</MudButton>
		</MudStack>
	</div>

	<MudStack Row="true" AlignItems="AlignItems.Center" Class="mb-2">
		<MudBreadcrumbs Items="_breadcrumbs" Separator=">"></MudBreadcrumbs>
	</MudStack>

	<div style="position: relative; min-height: 200px;">
		@if (_isLoading)
		{
			<div style="display: flex; justify-content: center; align-items: center; min-height: 200px;">
				<MudProgressCircular Indeterminate="true"/>
			</div>
		}

		@if (!_isLoading && !string.IsNullOrEmpty(_errorMessage))
		{
			<MudAlert Severity="Severity.Error" Class="mb-4">@_errorMessage</MudAlert>
		}

		@if (!_isLoading && string.IsNullOrEmpty(_errorMessage) && (_players is null || _players.Length == 0))
		{
			<div class="glass-card pa-6" style="text-align: center;">
				<MudStack AlignItems="AlignItems.Center" Spacing="3">
					<MudIcon Icon="@Icons.Material.Filled.Person" Color="Color.Tertiary"
					         Style="font-size: 4rem; opacity: 0.5;"/>
					<MudText Typo="Typo.h6">No players yet</MudText>
					<MudText Class="text-muted mb-4">Create your first player character to begin your adventures!</MudText>
					<MudButton Variant="Variant.Filled" Color="Color.Tertiary" Size="Size.Large"
					           Href="/players/new" StartIcon="@Icons.Material.Filled.PersonAdd">
						Create Your First Player
					</MudButton>
				</MudStack>
			</div>
		}

		@if (!_isLoading && string.IsNullOrEmpty(_errorMessage) && _players is not null && _players.Length > 0)
		{
			<MudPaper Elevation="0" Class="pa-0" Style="background: transparent;">
				<MudTable Items="_players" Dense="true" Hover="true">
					<HeaderContent>
						<MudTh>Name</MudTh>
						<MudTh>Description</MudTh>
						<MudTh>Ruleset</MudTh>
						<MudTh Style="text-align: right;">Actions</MudTh>
					</HeaderContent>
					<RowTemplate>
						<MudTd>
							<MudLink Href="@($"/players/{context.Id}/edit")">@context.Name</MudLink>
						</MudTd>
						<MudTd>@(context.Description ?? "-")</MudTd>
						<MudTd>
							<MattEland.Jaimes.Web.Components.Shared.RulesetLink 
								RulesetId="@context.RulesetId" />
						</MudTd>
						<MudTd Style="text-align: right;">
							<MudTooltip Text="Edit Player" Placement="Placement.Top">
								<MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Default" Size="Size.Small"
								               Href="@($"/players/{context.Id}/edit")"/>
							</MudTooltip>
						</MudTd>
					</RowTemplate>
				</MudTable>
			</MudPaper>
		}
	</div>
</MudContainer>
