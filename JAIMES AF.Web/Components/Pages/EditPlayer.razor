@page "/players/{PlayerId}/edit"
@rendermode InteractiveServer

<PageTitle>Edit Player</PageTitle>

<MudContainer MaxWidth="MaxWidth.Medium" Class="mt-4">
	<FormPageHeader Title="@(_isLoading ? "Edit Player" : $"Edit: {_name}")"
	                Icon="@Icons.Material.Filled.Person"
	                Theme="FormPageHeader.HeroTheme.Info"
	                Subtitle="Modify character details" />

	<MudPaper Class="pa-6" Elevation="2">
        <MudStack Row="true" AlignItems="AlignItems.Center" Class="mb-4">
            <MudBreadcrumbs Items="_breadcrumbs" Separator=">"></MudBreadcrumbs>
        </MudStack>

		@if (_isLoading)
		{
			<MudProgressCircular Indeterminate="true" Class="my-4"/>
		}
		else if (!string.IsNullOrEmpty(_errorMessage))
		{
			<MudAlert Severity="Severity.Error" Class="mb-4">@_errorMessage</MudAlert>
		}

		@if (!_isLoading && !string.IsNullOrEmpty(_errorMessage) && _errorMessage.Contains("not found"))
		{
			<MudButton Variant="Variant.Text" Color="Color.Primary" Href="/players" Class="mt-2">
				Back to Players
			</MudButton>
		}

		@if (!_isLoading && string.IsNullOrEmpty(_errorMessage))
		{
			<MudForm>
				<MudTextField Value="@PlayerId"
				              Label="Player ID"
				              Variant="Variant.Outlined"
				              Class="mb-4"
				              Disabled="true"
				              HelperText="Player ID cannot be changed"/>

				<MudSelect T="string"
				           @bind-Value="_selectedRulesetId"
				           Label="Ruleset"
				           Variant="Variant.Outlined"
				           Class="mb-4"
				           Disabled="_isSaving"
				           Required="true"
				           RequiredError="Please select a ruleset">
					@foreach (RulesetInfoResponse ruleset in _rulesets)
					{
						<MudSelectItem Value="@ruleset.Id">@ruleset.Name</MudSelectItem>
					}
				</MudSelect>

				<MudTextField @bind-Value="_name"
				              Label="Name"
				              Variant="Variant.Outlined"
				              Class="mb-4"
				              Disabled="_isSaving"
				              Required="true"
				              RequiredError="Name is required"/>

				<MudTextField @bind-Value="_description"
				              Label="Description"
				              Variant="Variant.Outlined"
				              Class="mb-4"
				              Disabled="_isSaving"
				              Lines="2"/>

				<div class="d-flex gap-2 mt-4">
					<MudButton Variant="Variant.Filled"
					           Color="Color.Info"
					           OnClick="UpdatePlayerAsync"
					           Disabled="_isSaving || !IsFormValid()"
					           StartIcon="@Icons.Material.Filled.Check">
						@if (_isSaving)
						{
							<MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true"/>
							<span class="ms-2">Saving...</span>
						}
						else
						{
							<span>Save Changes</span>
						}
					</MudButton>

					<MudButton Variant="Variant.Text"
					           Color="Color.Default"
					           Href="@($"/players/{PlayerId}")"
					           Disabled="_isSaving">
						Cancel
					</MudButton>
				</div>
			</MudForm>
		}
	</MudPaper>
</MudContainer>

