@page "/scenarios"
@rendermode InteractiveServer

@inject HttpClient Http
@inject ILoggerFactory LoggerFactory
@inject IDialogService DialogService
@inject NavigationManager Navigation

<PageTitle>Scenarios</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="pa-4">

	<CompactHeroSection Title="Your Scenarios"
	                    Icon="@Icons.Material.Filled.MenuBook"
	                    Theme="CompactHeroSection.HeroTheme.Secondary"
	                    ItemCount="@_scenarios?.Length"
	                    ItemName="scenario"
	                    Subtitle="available"
	                    SubtitleNoItems="Create story seeds for your adventures"
	                    ActionText="New Scenario"
	                    ActionHref="/scenarios/new"/>

	<MudStack Row="true" AlignItems="AlignItems.Center" Class="mb-2">
		<MudBreadcrumbs Items="_breadcrumbs" Separator=">"></MudBreadcrumbs>
	</MudStack>

	<div style="position: relative; min-height: 200px;">
		@if (_isLoading)
		{
			<div style="display: flex; justify-content: center; align-items: center; min-height: 200px;">
				<MudProgressCircular Indeterminate="true"/>
			</div>
		}

		@if (!_isLoading && !string.IsNullOrEmpty(_errorMessage))
		{
			<MudAlert Severity="Severity.Error" Class="mb-4">@_errorMessage</MudAlert>
		}

		@if (!_isLoading && string.IsNullOrEmpty(_errorMessage) && (_scenarios is null || _scenarios.Length == 0))
		{
			<div class="glass-card pa-6" style="text-align: center;">
				<MudStack AlignItems="AlignItems.Center" Spacing="3">
					<MudIcon Icon="@Icons.Material.Filled.MenuBook" Color="Color.Secondary"
					         Style="font-size: 4rem; opacity: 0.5;"/>
					<MudText Typo="Typo.h6">No scenarios yet</MudText>
					<MudText Class="text-muted mb-4">Scenarios are story seeds that define the starting point of your adventures.</MudText>
					<MudButton Variant="Variant.Filled" Color="Color.Secondary" Size="Size.Large"
					           Href="/scenarios/new" StartIcon="@Icons.Material.Filled.Add">
						Create Your First Scenario
					</MudButton>
				</MudStack>
			</div>
		}

		@if (!_isLoading && string.IsNullOrEmpty(_errorMessage) && _scenarios is not null && _scenarios.Length > 0)
		{
			<MudPaper Elevation="0" Class="pa-0" Style="background: transparent;">
				<MudTable Items="_scenarios" Dense="true" Hover="true">
					<HeaderContent>
						<MudTh>Name</MudTh>
						<MudTh>Description</MudTh>
						<MudTh>Ruleset</MudTh>
						<MudTh>Agents</MudTh>
						<MudTh Style="text-align: right;">Actions</MudTh>
					</HeaderContent>
					<RowTemplate>
						<MudTd>
							<MudLink Href="@($"/scenarios/{context.Id}/edit")">@context.Name</MudLink>
						</MudTd>
						<MudTd>@(context.Description ?? "-")</MudTd>
						<MudTd>
							<MattEland.Jaimes.Web.Components.Shared.RulesetLink 
								RulesetId="@context.RulesetId" />
						</MudTd>
						<MudTd>
							@if (GetScenarioAgentsDisplay(context.Id).Any())
							{
								@foreach (var agentInfo in GetScenarioAgentsDisplay(context.Id))
								{
									<MudStack Row="true" Spacing="1" AlignItems="AlignItems.Center" Style="display: inline-flex;">
										<MattEland.Jaimes.Web.Components.Shared.AgentLink
											AgentId="@agentInfo.AgentId"
											AgentName="@agentInfo.AgentName"/>
										<MattEland.Jaimes.Web.Components.Shared.AgentVersionLink 
											AgentId="@agentInfo.AgentId" 
											VersionId="@agentInfo.VersionId"
											VersionNumber="@agentInfo.VersionNumber" />
									</MudStack>
								}
							}
							else
							{
								<span class="text-muted">No agents</span>
							}
						</MudTd>
						<MudTd Style="text-align: right;">
							<MudTooltip Text="Edit Scenario" Placement="Placement.Top">
								<MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Default" Size="Size.Small"
								               Href="@($"/scenarios/{context.Id}/edit")"/>
							</MudTooltip>
						</MudTd>
					</RowTemplate>
				</MudTable>
			</MudPaper>
		}
	</div>
</MudContainer>
