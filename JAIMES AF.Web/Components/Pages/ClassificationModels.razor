@page "/admin/classification-models"
@using MattEland.Jaimes.ServiceDefinitions.Responses
@rendermode InteractiveServer
@inject HttpClient Http

<PageTitle>Classification Models</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="pa-4">
	<MudPaper Class="pa-8" Elevation="2">
		<MudStack Row="true" AlignItems="AlignItems.Center" Class="mb-2">
			<MudBreadcrumbs Items="_breadcrumbs" Separator=">"></MudBreadcrumbs>
		</MudStack>
		<MudText Typo="Typo.h3" GutterBottom="true" Class="mb-2">Classification Models</MudText>
		<MudText Typo="Typo.subtitle1" GutterBottom="true" Class="mb-6 text-muted">
			Machine learning models stored in the database for inference.
		</MudText>

		@if (_loading)
		{
			<MudProgressCircular Indeterminate="true" Class="mb-4"/>
		}
		else if (_models.Count == 0)
		{
			<MudAlert Severity="Severity.Info" Class="mb-4">
				No classification models have been uploaded to the database yet.
				The DatabaseMigration worker will upload the sentiment model on startup if a bundled model is available.
			</MudAlert>
		}
		else
		{
			<MudDataGrid Items="@_models" Dense="true" Hover="true" Striped="true" Class="mb-4">
				<Columns>
					<PropertyColumn Property="x => x.Id" Title="ID"/>
					<PropertyColumn Property="x => x.Name" Title="Name"/>
					<PropertyColumn Property="x => x.ModelType" Title="Type"/>
					<PropertyColumn Property="x => x.FileName" Title="File Name"/>
					<TemplateColumn Title="Size">
						<CellTemplate>
							@FormatFileSize(context.Item.SizeBytes)
						</CellTemplate>
					</TemplateColumn>
					<TemplateColumn Title="Created">
						<CellTemplate>
							@context.Item.CreatedAt.ToString("g")
						</CellTemplate>
					</TemplateColumn>
				</Columns>
			</MudDataGrid>
		}

		@if (!string.IsNullOrEmpty(_error))
		{
			<MudAlert Severity="Severity.Error" Class="mt-4">@_error</MudAlert>
		}
	</MudPaper>
</MudContainer>

@code {
	private List<ClassificationModelResponse> _models = new();
	private bool _loading = true;
	private string? _error;
	private List<BreadcrumbItem> _breadcrumbs = new();

	protected override async Task OnInitializedAsync()
	{
		_breadcrumbs = new List<BreadcrumbItem>
		{
			new BreadcrumbItem("Home", href: "/"),
			new BreadcrumbItem("Admin", href: "/admin"),
			new BreadcrumbItem("Classification Models", href: null, disabled: true)
		};

		await LoadModelsAsync();
	}

	private async Task LoadModelsAsync()
	{
		_loading = true;
		_error = null;

		try
		{
			var response = await Http.GetFromJsonAsync<List<ClassificationModelResponse>>("/admin/classification-models");
			_models = response ?? new List<ClassificationModelResponse>();
		}
		catch (Exception ex)
		{
			_error = $"Failed to load classification models: {ex.Message}";
		}
		finally
		{
			_loading = false;
		}
	}

	private static string FormatFileSize(long? bytes)
	{
		if (bytes == null) return "Unknown";
		if (bytes < 1024) return $"{bytes} B";
		if (bytes < 1024 * 1024) return $"{bytes / 1024.0:F1} KB";
		return $"{bytes / (1024.0 * 1024.0):F1} MB";
	}

}
