@page "/"

<PageTitle>Home</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="pa-4">
	<MudPaper Class="pa-8" Elevation="2">
		<MudText Typo="Typo.h3" GutterBottom="true" Class="mb-2">Welcome to JAIMES AF</MudText>
		<MudText Typo="Typo.subtitle1" GutterBottom="true" Class="mb-6 text-muted">Join AI in Making Epic Stories —
			Agent Framework edition
		</MudText>

		<MudText Typo="Typo.body1" Class="mb-6" Style="line-height: 1.75;">
			JAIMES AF offers a single-player roleplaying experience powered by an AI game master. Create or select a
			scenario, choose a player character, and start chatting with your AI Game Master. The AI will craft an
			immersive story that adapts to your choices in real-time.
		</MudText>

		<MudGrid Class="mb-8" Justify="Justify.Center">
			<MudItem xs="12" md="8" Class="text-center">
				<MudButton Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large" Href="/games/new"
				           Class="px-8 py-4 mb-3" Style="font-size: 1.1rem; font-weight: 500;">
					Start New Game
				</MudButton>
				<MudText Typo="Typo.body2" Class="text-muted">or
					<MudLink Href="/games" Typo="Typo.body2">view existing games</MudLink>
				</MudText>
			</MudItem>
		</MudGrid>

		<MudDivider Class="my-8"/>

		<MudText Typo="Typo.h5" GutterBottom="true" Class="mb-4">Manage Your Content</MudText>
		<MudGrid Spacing="3">
			<MudItem xs="12" sm="6" md="4">
				<MudPaper Class="pa-5" Elevation="2" Style="height: 100%;">
					<MudText Typo="Typo.h6" GutterBottom="true" Class="mb-3">Play Games</MudText>
					<MudText Typo="Typo.body2" Class="mb-4" Style="line-height: 1.6; min-height: 3.2em;">Start a new
						game or continue an existing one. Chat with your AI Game Master in real-time.
					</MudText>
					<MudButton Variant="Variant.Filled" Color="Color.Primary" Href="/games" Class="mt-auto"
					           FullWidth="true">Continue Game
					</MudButton>
				</MudPaper>
			</MudItem>

			<MudItem xs="12" sm="6" md="4">
				<MudPaper Class="pa-5" Elevation="2" Style="height: 100%;">
					<MudText Typo="Typo.h6" GutterBottom="true" Class="mb-3">Scenarios</MudText>
					<MudText Typo="Typo.body2" Class="mb-4" Style="line-height: 1.6; min-height: 3.2em;">Create and edit
						game scenarios with system prompts and initial instructions.
					</MudText>
					<MudButton Variant="Variant.Filled" Color="Color.Secondary" Href="/scenarios" Class="mt-auto"
					           FullWidth="true">Manage Scenarios
					</MudButton>
				</MudPaper>
			</MudItem>

			<MudItem xs="12" sm="6" md="4">
				<MudPaper Class="pa-5" Elevation="2" Style="height: 100%;">
					<MudText Typo="Typo.h6" GutterBottom="true" Class="mb-3">Players</MudText>
					<MudText Typo="Typo.body2" Class="mb-4" Style="line-height: 1.6; min-height: 3.2em;">Create and edit
						player characters with names, descriptions, and ruleset assignments.
					</MudText>
					<MudButton Variant="Variant.Filled" Color="Color.Secondary" Href="/players" Class="mt-auto"
					           FullWidth="true">Manage Players
					</MudButton>
				</MudPaper>
			</MudItem>
		</MudGrid>

		<MudDivider Class="my-8"/>

		<MudText Typo="Typo.h5" GutterBottom="true" Class="mb-4">Administration</MudText>
		<MudGrid Spacing="3" Class="mb-8">
			<MudItem xs="12" sm="6" md="3">
				<MudPaper Class="pa-5" Elevation="2" Style="height: 100%;">
					<MudText Typo="Typo.h6" GutterBottom="true" Class="mb-3">Admin</MudText>
					<MudText Typo="Typo.body2" Class="mb-4" Style="line-height: 1.6; min-height: 3.2em;">Access
						administrative tools, content management, and testing utilities.
					</MudText>
					<MudButton Variant="Variant.Filled" Color="Color.Info" Href="/admin" Class="mt-auto"
					           FullWidth="true">Admin Panel
					</MudButton>
				</MudPaper>
			</MudItem>
		</MudGrid>

		<MudDivider Class="my-8"/>

		<MudText Typo="Typo.h5" GutterBottom="true" Class="mb-4">How It Works</MudText>
		<MudList T="string" Dense="false" Class="mb-4">
			<MudListItem T="string" Class="py-2">
				<MudText Typo="Typo.body2" Style="line-height: 1.6;">
					<strong>Rulesets:</strong> Define game systems and mechanics that the AI Game Master will use to run
					your games.
				</MudText>
			</MudListItem>
			<MudListItem T="string" Class="py-2">
				<MudText Typo="Typo.body2" Style="line-height: 1.6;">
					<strong>Scenarios:</strong> Create story seeds with system prompts and initial instructions that
					guide the AI's storytelling.
				</MudText>
			</MudListItem>
			<MudListItem T="string" Class="py-2">
				<MudText Typo="Typo.body2" Style="line-height: 1.6;">
					<strong>Players:</strong> Create player characters with names and descriptions that the AI will
					incorporate into the story.
				</MudText>
			</MudListItem>
			<MudListItem T="string" Class="py-2">
				<MudText Typo="Typo.body2" Style="line-height: 1.6;">
					<strong>Games:</strong> Start a new game by selecting a scenario and player. Chat with the AI Game
					Master in real-time and watch your story unfold.
				</MudText>
			</MudListItem>
			<MudListItem T="string" Class="py-2">
				<MudText Typo="Typo.body2" Style="line-height: 1.6;">
					<strong>AI-Powered:</strong> Built on Microsoft Agent Framework, the AI adapts the story dynamically
					based on your choices and interactions.
				</MudText>
			</MudListItem>
		</MudList>

		<MudDivider Class="my-6"/>

		<MudText Typo="Typo.caption" Class="text-muted text-center" Style="opacity: 0.7;">Powered by .NET and Microsoft
			Agent Framework
		</MudText>
	</MudPaper>
</MudContainer>
