@* Compact clickable card for admin tool links *@

<MudLink Href="@Href" Underline="Underline.None" Style="display: block; height: 100%;">
    <MudPaper Class="compact-link-card pa-2 d-flex align-center" Elevation="1" Style="height: 100%; cursor: pointer;">
        <MudIcon Icon="@Icon" Color="@IconColor" Size="Size.Small" Class="mr-2" />
        <MudText Typo="Typo.body2" Style="font-weight: 500;">@Title</MudText>
    </MudPaper>
</MudLink>

@code {
    [Parameter] public string Icon { get; set; } = Icons.Material.Filled.OpenInNew;
    [Parameter] public Color IconColor { get; set; } = Color.Primary;
    [Parameter] public string Title { get; set; } = string.Empty;
    [Parameter] public string Href { get; set; } = "#";
}
