@* 
    AgentLink.razor - Reusable component for displaying agent name with link to agent details.
    Displays as a chip with a bot icon for consistent styling throughout the Admin UI.
*@

<MudTooltip Text="View Agent Details" Placement="Placement.Top">
    <MudChip T="string"
             Size="Size.Small"
             Color="Color.Primary"
             Variant="Variant.Text"
             Icon="@Icons.Material.Filled.SmartToy"
             Href="@AgentHref"
             Disabled="@(!HasAgentId)"
             Label="true">
        @DisplayName
    </MudChip>
</MudTooltip>

@code {
    /// <summary>
    /// The agent's unique identifier.
    /// </summary>
    [Parameter, EditorRequired]
    public string? AgentId { get; set; }

    /// <summary>
    /// Display name for the agent.
    /// </summary>
    [Parameter, EditorRequired]
    public string? AgentName { get; set; }

    private bool HasAgentId => !string.IsNullOrWhiteSpace(AgentId);

    private string? AgentHref => HasAgentId ? $"/agents/{AgentId}" : null;

    private string DisplayName => string.IsNullOrWhiteSpace(AgentName) ? "Unknown" : AgentName;
}
