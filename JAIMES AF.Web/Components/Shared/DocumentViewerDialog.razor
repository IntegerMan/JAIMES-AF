@namespace MattEland.Jaimes.Web.Components.Shared

<MudDialog>
    <TitleContent>
        <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
            <MudIcon Icon="@Icons.Material.Filled.PictureAsPdf" Color="Color.Error" />
            <MudText Typo="Typo.h6">@FileName</MudText>
        </MudStack>
    </TitleContent>
    <DialogContent>
        <MudPaper Style="width: 100%; height: 70vh; overflow: hidden; position: relative;" Elevation="0">
            @if (_isLoading)
            {
                <div style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; display: flex; flex-direction: column; align-items: center; justify-content: center; background-color: var(--mud-palette-background); z-index: 1;">
                    <MudProgressCircular Indeterminate="true" Color="Color.Primary" Size="Size.Large" />
                    <MudText Typo="Typo.body1" Class="mt-4">Loading document...</MudText>
                </div>
            }
            <iframe 
                src="@FileUrl" 
                style="width: 100%; height: 100%; border: none;"
                title="Document Viewer"
                @onload="OnIframeLoaded">
            </iframe>
        </MudPaper>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Close" Color="Color.Primary" Variant="Variant.Filled">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] 
    private IMudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public string FileName { get; set; } = "Document";

    [Parameter]
    public string FileUrl { get; set; } = string.Empty;

    private bool _isLoading = true;

    private void OnIframeLoaded()
    {
        _isLoading = false;
        StateHasChanged();
    }

    private void Close() => MudDialog.Close();
}
