@using MudBlazor
@inherits LayoutComponentBase

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
	<MudAppBar Elevation="1">
		<MudText Typo="Typo.h6">JAIMES AF</MudText>
	</MudAppBar>

	<MudDrawer Open="true" ClipMode="DrawerClipMode.Always" Elevation="1" Variant="DrawerVariant.Responsive" Anchor="Anchor.Start">
		<NavMenu />
	</MudDrawer>

	<MudMainContent>
		<div class="top-row px-4">
			<MudLink Href="https://learn.microsoft.com/aspnet/core/" Target="_blank">About</MudLink>
		</div>

		<article class="content px-4">
			@Body
		</article>
	</MudMainContent>
</MudLayout>

<div id="blazor-error-ui">
	An unhandled error has occurred.
	<a href="" class="reload">Reload</a>
	<a class="dismiss">🗙</a>
</div>
