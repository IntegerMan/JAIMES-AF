@inherits LayoutComponentBase

<MudThemeProvider Theme="_theme"/>
<MudPopoverProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
	<MudAppBar Elevation="1" Color="Color.Primary" Dense="true" Style="height: 40px; min-height: 40px;">
		<MudText Typo="Typo.subtitle1" Class="ml-2" Style="font-weight: 700;">JAIMES AF</MudText>
		<MudText Typo="Typo.caption" Class="ml-3" Style="opacity: 0.85;">Join AI in Making Epic Stories</MudText>
		<MudSpacer/>
		<MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2" Class="mr-4">
			<MudText Typo="Typo.caption" Style="font-weight: 600;">Matthew Hope Eland</MudText>
			<MudAvatar Color="Color.Secondary" Size="Size.Small" Style="height: 24px; width: 24px; font-size: 0.65rem; font-weight: 700;">ME</MudAvatar>
		</MudStack>
		<MudLink Href="https://github.com/IntegerMan/JAIMES-AF" Target="_blank" Class="mud-link-white" Style="font-size: 0.75rem;">
			<MudIcon Icon="@Icons.Custom.Brands.GitHub" Size="Size.Small" Class="me-1" />GitHub
		</MudLink>
	</MudAppBar>

	<MudDrawer Open="true" ClipMode="DrawerClipMode.Always" Elevation="1" Variant="DrawerVariant.Responsive"
	           Anchor="Anchor.Start">
		<NavMenu/>
	</MudDrawer>

	<MudMainContent Class="pt-0">
		<article class="content px-4 pt-0">
			@Body
		</article>
	</MudMainContent>
</MudLayout>

<div id="blazor-error-ui">
	An unhandled error has occurred.
	<a href="" class="reload">Reload</a>
	<a class="dismiss">🗙</a>
</div>

@code {
	private readonly MudTheme _theme = new()
	{
		PaletteLight = new PaletteLight
		{
			Primary = "#7B2CBF",           // Purple
			Secondary = "#4361EE",         // Blue
			Tertiary = "#4CC9F0",          // Light Blue
			Info = "#06D6A0",              // Sea Foam / Teal
			Success = "#06D6A0",           // Green
			Warning = "#FFD60A",           // Yellow
			Error = "#EF476F",             // Red/Pink
			Dark = "#2B2D42",              // Dark text
			TextPrimary = "#2B2D42",
			TextSecondary = "#6C757D",
			Background = "#F8F9FA",
			Surface = "#FFFFFF",
			AppbarBackground = "#7B2CBF",
			AppbarText = "#FFFFFF",
			DrawerBackground = "#2B2D42",
			DrawerText = "#F8F9FA"
		}
	};
}
