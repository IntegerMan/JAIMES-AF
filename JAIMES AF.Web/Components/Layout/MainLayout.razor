@inherits LayoutComponentBase

<MudThemeProvider Theme="_theme"/>
<MudPopoverProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
	<MudAppBar Elevation="1" Color="Color.Primary">
		<MudText Typo="Typo.h6" Class="ml-2">JAIMES AF</MudText>
		<MudText Typo="Typo.subtitle2" Class="ml-4">Join AI in Making Epic Stories — Agent Framework</MudText>
		<MudSpacer/>
		<MudLink Href="/" Class="mud-link-white">Home</MudLink>
		<MudLink Href="/games" Class="ml-4 mud-link-white">Games</MudLink>
		<MudLink Href="/scenarios" Class="ml-4 mud-link-white">Scenarios</MudLink>
		<MudLink Href="/players" Class="ml-4 mud-link-white">Players</MudLink>
		<MudLink Href="/rulesets" Class="ml-4 mud-link-white">Rulesets</MudLink>
		<MudLink Href="/admin" Class="ml-4 mud-link-white">Admin</MudLink>
		<MudLink Href="https://github.com/IntegerMan/JAIMES-AF" Target="_blank" Class="ml-4 mud-link-white">GitHub
		</MudLink>
	</MudAppBar>

	<MudDrawer Open="true" ClipMode="DrawerClipMode.Always" Elevation="1" Variant="DrawerVariant.Responsive"
	           Anchor="Anchor.Start">
		<NavMenu/>
	</MudDrawer>

	<MudMainContent>
		<article class="content px-4">
			@Body
		</article>
	</MudMainContent>
</MudLayout>

<div id="blazor-error-ui">
	An unhandled error has occurred.
	<a href="" class="reload">Reload</a>
	<a class="dismiss">🗙</a>
</div>

@code {
	private readonly MudTheme _theme = new()
	{
		PaletteLight = new PaletteLight
		{
			Primary = "#7B2CBF",           // Purple
			Secondary = "#4361EE",         // Blue
			Tertiary = "#4CC9F0",          // Light Blue
			Info = "#06D6A0",              // Sea Foam / Teal
			Success = "#06D6A0",           // Green
			Warning = "#FFD60A",           // Yellow
			Error = "#EF476F",             // Red/Pink
			Dark = "#2B2D42",              // Dark text
			TextPrimary = "#2B2D42",
			TextSecondary = "#6C757D",
			Background = "#F8F9FA",
			Surface = "#FFFFFF",
			AppbarBackground = "#7B2CBF",
			AppbarText = "#FFFFFF",
			DrawerBackground = "#F8F9FA",
			DrawerText = "#2B2D42"
		}
	};
}
