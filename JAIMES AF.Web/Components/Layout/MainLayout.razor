@using MudBlazor
@inherits LayoutComponentBase

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
	<MudAppBar Elevation="1" Color="Color.Primary">
		<MudText Typo="Typo.h6" Class="ml-2">JAIMES AF</MudText>
		<MudText Typo="Typo.subtitle2" Class="ml-4">Join AI in Making Epic Stories — Agent Framework</MudText>
		<MudSpacer />
		<MudLink Href="/" Class="mud-link-white">Home</MudLink>
		<MudLink Href="/games" Class="ml-4 mud-link-white">Games</MudLink>
		<MudLink Href="https://github.com/IntegerMan/JAIMES-AF" Target="_blank" Class="ml-4 mud-link-white">GitHub</MudLink>
	</MudAppBar>

	<MudDrawer Open="true" ClipMode="DrawerClipMode.Always" Elevation="1" Variant="DrawerVariant.Responsive" Anchor="Anchor.Start">
		<NavMenu />
	</MudDrawer>

	<MudMainContent>
		<div class="top-row px-4">
			<MudLink Href="https://learn.microsoft.com/aspnet/core/" Target="_blank">About</MudLink>
		</div>

		<article class="content px-4">
			@Body
		</article>
	</MudMainContent>
</MudLayout>

<div id="blazor-error-ui">
	An unhandled error has occurred.
	<a href="" class="reload">Reload</a>
	<a class="dismiss">🗙</a>
</div>
