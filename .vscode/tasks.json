{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "stop-running-apps",
            "type": "shell",
            "command": "echo",
            "args": [
                "No running apps to stop on Linux/macOS"
            ],
            "windows": {
                "command": "powershell",
                "args": [
                    "-NoProfile",
                    "-ExecutionPolicy",
                    "Bypass",
                    "-File",
                    "${workspaceFolder}/.vscode/stop-apps.ps1",
                    "${workspaceFolder}"
                ]
            },
            "problemMatcher": []
        },
        {
            "label": "disconnect-debuggers",
            "type": "shell",
            "command": "echo",
            "args": [
                "Note: To disconnect debuggers, use the Debug panel in VS Code and click the Stop button, or use the command palette (Ctrl+Shift+P) and run 'Debug: Stop Debugging'"
            ],
            "windows": {
                "command": "powershell",
                "args": [
                    "-NoProfile",
                    "-ExecutionPolicy",
                    "Bypass",
                    "-Command",
                    "Write-Host 'Note: To disconnect debuggers, use the Debug panel in VS Code and click the Stop button, or use the command palette (Ctrl+Shift+P) and run \"Debug: Stop Debugging\"'"
                ]
            },
            "problemMatcher": []
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/JAIMES AF.slnx",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "dependsOn": "stop-running-apps",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "run",
            "command": "dotnet",
            "type": "process",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/JAIMES AF.AppHost/JAIMES AF.AppHost.csproj"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/JAIMES AF.slnx",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/JAIMES AF.slnx"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}